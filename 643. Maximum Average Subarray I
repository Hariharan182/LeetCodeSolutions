class Solution {
    public double findMaxAverage(int[] nums, int k) {
        int n=nums.length;
        double CurAvg=Double.NEGATIVE_INFINITY;
        double MaxAvg=Double.NEGATIVE_INFINITY;
        int sum=0;
        for(int i=0;i<n;i++){
             
            sum+=nums[i];
            if(i>=k-1){
                CurAvg=(double)sum/k;
                MaxAvg=Math.max(CurAvg,MaxAvg);
                sum=sum-nums[i-(k-1)];

            }
        }
        return MaxAvg;
        
    }
}
