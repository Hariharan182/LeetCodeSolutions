class Solution {
    public int[] twoSum(int[] nums, int target) {
        Map<Integer, Integer> a = new HashMap<>();
        
        for (int i = 0; i < nums.length; i++) {
            int com = target - nums[i];
            if (a.containsKey(com)) {
                return new int[]{a.get(com), i};
            }
            a.put(nums[i], i);
        }
        
        return new int[]{};
    }
}
