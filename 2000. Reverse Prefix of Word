class Solution {
    public String reversePrefix(String word, char ch) {
        char c[]=word.toCharArray();
        int k=-1;
        for(int i=0;i<c.length;i++) {
            if(c[i]==ch){
                k=i;
                break;

            }
           
        }
         if(k==-1){
                return word;
            }
        int l=0;

        while(l<k){
            char temp=c[l];
            c[l]=c[k];
            c[k]=temp;
            l++;
            k--;

        }
        return new String(c);
    }
}
